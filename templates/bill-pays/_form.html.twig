<form method="post" action="{{ action }}">
	<div class="form-group">
        <label class="control-label">Data de Lan√ßamento</label>
        <input class="form-control" type="text" name="date_lauch" 
               placeholder="DD/MM/YYYY" value="{{ bill.date_lauch | date('d/m/Y') }}">
    </div>
    <div class="form-group">
        <label class="control-label">Nome</label>
        <input class="form-control" type="text" name="name" 
               placeholder="Nome" value="{{ bill.name }}">
    </div>
    <div class="form-group">
        <label class="control-label">Valor</label>
        <input class="form-control" type="text" name="value" 
               placeholder="0.000,00" value="{{ bill.value | number_format(2, ',', '.') }}">
    </div>
    <button type="submit" class="btn btn-primary btn-block">
        <span class="glyphicon glyphicon-{{ submitIcon }}"></span>
    </button>
</form>